{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "love2d: run",
            "type": "shell",
            "command": "lovec",
            "args": [
                "."
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "love2d: build",
            "type": "process",
            "command": "./compile.ps1",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            }
        }
    ]
}
